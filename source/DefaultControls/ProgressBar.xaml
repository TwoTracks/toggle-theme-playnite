<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d">

    <Style TargetType="{x:Type ProgressBar}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ControlBackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FixedFontSizeSmall}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="true">
                        <Grid x:Name="PART_Track" ClipToBounds="true">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="{TemplateBinding Foreground}"
                                RadiusX="8"
                                RadiusY="8">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill">
                                        <VisualBrush.Visual>
                                            <Border
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Background="Black"
                                                CornerRadius="8" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CircleProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#20FFFFFF" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid x:Name="PART_Track">

                            <!--  Progress Indicator with circle  -->
                            <Border
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                                <!--  Circle aligned to the right edge of the indicator  -->
                                <Grid
                                    Margin="0,0,-16,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <!--  Outer circle at 75% opacity  -->
                                    <Ellipse
                                        Width="32"
                                        Height="32"
                                        Fill="{TemplateBinding Foreground}"
                                        Opacity="0.75" />

                                    <!--  Inner circle at 100% opacity  -->
                                    <Ellipse
                                        Width="24"
                                        Height="24"
                                        Margin="4"
                                        Fill="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LabeledProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Height" Value="48" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Progress Track and Indicator with rounded edges  -->
                        <Border
                            Grid.Row="0"
                            Height="16"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            SnapsToDevicePixels="true">
                            <Grid x:Name="PART_Track" ClipToBounds="true">
                                <Rectangle
                                    x:Name="PART_Indicator"
                                    HorizontalAlignment="Left"
                                    Fill="{TemplateBinding Foreground}"
                                    RadiusX="8"
                                    RadiusY="8">
                                    <Rectangle.OpacityMask>
                                        <VisualBrush Stretch="Fill">
                                            <VisualBrush.Visual>
                                                <Border
                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                    Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                    Background="Black"
                                                    CornerRadius="8" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                            </Grid>
                        </Border>

                        <!--  Label aligned to the right edge of indicator, below the progress bar  -->
                        <Grid Grid.Row="1">
                            <Border
                                Width="{Binding ActualWidth, ElementName=PART_Indicator}"
                                HorizontalAlignment="Left"
                                Background="Transparent">
                                <TextBlock
                                    Margin="0,0,12,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontFamily="{DynamicResource FontDefaultBold}"
                                    FontSize="16"
                                    Foreground="White"
                                    Text="{TemplateBinding Tag}" />
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="BarRound12"
        BasedOn="{StaticResource {x:Type ProgressBar}}"
        TargetType="ProgressBar">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ControlBackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FixedFontSizeSmall}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Margin="-1"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12"
                        SnapsToDevicePixels="true">
                        <Grid x:Name="PART_Track" ClipToBounds="true">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="{TemplateBinding Foreground}"
                                RadiusX="12"
                                RadiusY="12">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill">
                                        <VisualBrush.Visual>
                                            <Border
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Background="Black"
                                                CornerRadius="12" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="BarRound12Light"
        BasedOn="{StaticResource {x:Type ProgressBar}}"
        TargetType="ProgressBar">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FixedFontSizeSmall}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Margin="-1"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12"
                        SnapsToDevicePixels="true">
                        <Grid x:Name="PART_Track" ClipToBounds="true">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="{TemplateBinding Foreground}"
                                RadiusX="12"
                                RadiusY="12">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill">
                                        <VisualBrush.Visual>
                                            <Border
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Background="Black"
                                                CornerRadius="12" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ProgressWindowProgressBarStyle"
        BasedOn="{StaticResource {x:Type ProgressBar}}"
        TargetType="ProgressBar">
        <Setter Property="Height" Value="48" />
        <Setter Property="Margin" Value="0,48,0,64" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="{DynamicResource ControlBackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource FixedFontSizeSmall}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontFamily}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource SelectionLightBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border
                        Margin="-1"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="24"
                        SnapsToDevicePixels="true">
                        <Grid x:Name="PART_Track" ClipToBounds="true">
                            <Rectangle
                                x:Name="PART_Indicator"
                                HorizontalAlignment="Left"
                                Fill="{TemplateBinding Foreground}"
                                RadiusX="24"
                                RadiusY="24">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill">
                                        <VisualBrush.Visual>
                                            <Border
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                                Background="Black"
                                                CornerRadius="24" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
